.gameResultsSection {
  @apply divide-y-2;

  & .wrongAnswers {
    @apply mb-4;
  }
}

.headerContainer {
  @apply flex items-center mb-2 mt-4;

  & .header {
    @apply text-xl;
  }

  & .indicator {
    @apply h-7 w-7 p-1 ml-2 rounded-full text-center text-sm;
  }

  & .correct {
    @apply bg-green-500 text-white; 
  }

  & .wrong {
    @apply bg-red-500 text-white;
  }
}

